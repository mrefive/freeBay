<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrefive.freebay.OfferMenuActivity"
    android:background="#426099b7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_offer_menu_scrollView"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnercontainer"
            android:scrollIndicators="right">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:gravity="center_vertical|center_horizontal"
                android:minHeight="180dp"
                android:id="@+id/offerimagecontainer"
                android:background="#ffffff"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:adjustViewBounds="true" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:id="@+id/rellaytitle"
                android:background="#ffffff"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/offerimagecontainer">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offermenutitletitle"
                    android:id="@+id/offermenutitletitle"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:id="@+id/offermenutitle"
                    android:layout_alignParentTop="false"
                    android:layout_centerHorizontal="true"
                    android:textSize="16dp"
                    android:layout_below="@+id/offermenutitletitle"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#FF282828"
                    android:textStyle="normal" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rellaydescr"
                android:layout_below="@+id/rellaytitle"
                android:layout_alignParentTop="false"
                android:background="#ffffff"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="descr"
                    android:id="@+id/offermenudescr"
                    android:layout_below="@+id/offermenudescrtitle"
                    android:layout_centerHorizontal="true"
                    android:textSize="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="gravity"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#282828" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offermenudescrtitle"
                    android:id="@+id/offermenudescrtitle"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentTop="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rellaydateend"
                android:layout_below="@+id/rellaydescr"
                android:layout_alignParentTop="false"
                android:background="#ffffff"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dateendtitle"
                    android:id="@+id/offermenudateendtitle"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="date"
                    android:id="@+id/offermenudateend"
                    android:layout_below="@+id/offermenudateendtitle"
                    android:layout_centerHorizontal="true"
                    android:textSize="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:textAlignment="gravity"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="#282828"
                    android:layout_alignParentRight="true"
                    android:gravity="right" />
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Entry"
                android:id="@+id/offermenubuttondeleteentry"
                android:layout_below="@+id/rellaydateend"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:textColor="#c3c3c3"
                android:background="#af1212"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
