<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#df555766">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:id="@+id/placeholderSB"
        android:layout_alignParentTop="true">

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/placeholderAB"
        android:layout_below="@+id/placeholderSB">

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placeholderAB"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:background="@android:drawable/dialog_holo_light_frame">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/camera_preview"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp">

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/camera_interface"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_alignBottom="@+id/camera_preview"
            android:background="#faf9f9">

            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/button_cancel"
                android:gravity="center"
                android:background="@android:drawable/ic_menu_revert"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="50dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/button_flash"
                android:gravity="center"
                android:background="@android:drawable/ic_lock_idle_low_battery"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/button_caputre"
                android:gravity="center"
                android:background="@drawable/ticksmall"
                android:scaleType="fitXY"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="50dp"/>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
